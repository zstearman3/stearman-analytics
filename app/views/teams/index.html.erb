<h1>Rankings</h1>

<table class="teams table table-striped table-bordered sortable" data-sort-name="rating" data-sort-order="desc">
  <tr>
    <th><%= sort_link(@q, :rank, "Rank", default_order: :asc) %></th>
    <th><%= sort_link(@q, :school_name, "School") %></th>
    <th><%= sort_link(@q, :conference, "Conference") %></th>
    <th><%= sort_link(@q, :rating, "Rating", default_order: :desc) %></th>
    <th><%= sort_link(@q, :ortg, "ORtg", default_order: :desc) %></th>
    <th><%= sort_link(@q, :drtg, "DRtg", default_order: :desc) %></th>
    <th><%= sort_link(@q, :tempo, "Tempo") %></th>
  </tr>
  <% @teams.each do |team| %>
    <% if team.school_name != 'dummy' %>
      <tr>
        <td><%= team.rank %></td>
        <td><%= link_to team.school_name, team %></td>
        <td><%= team.conference %></td>
        <td><%= team.rating %></td>
        <td><%= team.ortg %></td>
        <td><%= team.drtg %></td>
        <td><%= team.tempo %></td>
      </tr>
    <% end %>
  <% end %>
</table>
